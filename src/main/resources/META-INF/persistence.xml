<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
  <persistence-unit name="meuPU" transaction-type="JTA">
  <jta-data-source>java:/jdbc/MEUPU</jta-data-source>
    <class>com.tipiniquim.modelo.Usuario</class>
    
   	<properties>
    	<property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect" />
    	<property name="hibernate.show_sql" value="${hibernate.show_sql}" />
		<property name="hibernate.format_sql" value="${hibernate.format_sql}" />
		<property name="javax.persistence.query.timeout" value="1800000"/>
    </properties> 	
  </persistence-unit>
</persistence>